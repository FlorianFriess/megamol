# Paths to external libraries
outbin := %outbin%
vislibpath := %vislib%
visglutpath := %visglutPath%
mmcorepath := %mmcorePath%

ifeq (%withTweakbar%$1$0$, 1)
	tweakbarpath := %tweakbarpath%
	IncludeDir += $(tweakbarpath)/include
	CompilerFlags += -DWITH_TWEAKBAR
	LinkerFlags += -L$(tweakbarpath)/lib
	DebugLinkerFlags += -lAntTweakBar$(BITS)
	ReleaseLinkerFlags += -lAntTweakBar$(BITS)
endif
