if(NOT EXISTS "${LINK_FILE}")
	execute_process(COMMAND ln -s "${TO_FILE}" "${LINK_FILE}")
	message(STATUS "Install symbolic link: ${LINK_FILE}")
else()
	message(STATUS "Skipping symbolic link: ${LINK_FILE}")
endif()

