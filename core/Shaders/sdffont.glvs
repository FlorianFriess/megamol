/*
* Vertex shader for SDFFont
*/
#version 400


in      vec3  inVertPos;
in      vec2  inVertTexCoord;

uniform mat4  mvpMat;         // ModelViewProjection-Matrix
uniform float fontSize;

out     vec2  texCoord;


/*
* MAIN
*/
void main() {

    texCoord    = inVertTexCoord;
    gl_Position = mvpMat * vec4(inVertPos, 1.0);

}

