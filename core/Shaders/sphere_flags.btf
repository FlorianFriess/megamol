    flagDiscard = 0;
    flagColor = vec4(0.0, 0.0, 0.0, 0.0);
    uint flag = uint(0);

#ifdef FLAG_STORAGE_SSBO
    flag = inFlags[(flagOffset + gl_VertexID)];
